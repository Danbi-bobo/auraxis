{{ 'collection.css' | asset_url | stylesheet_tag }}

{%- liquid
  assign columns_desktop = section.settings.columns_desktop
  assign columns_mobile = section.settings.columns_mobile | times: 1
  assign rows_desktop = section.settings.rows_desktop

  # Tính tổng số sản phẩm hiển thị 1 lần (Cột x Hàng)
  assign items_per_page = columns_desktop | times: rows_desktop
-%}

{% render 'divider',
  show_divider: section.settings.show_section_divider,
  divider_width: section.settings.divider_width
%}

<div
  class="section--padding color-{{ section.settings.color_scheme }}"
  style="--section-padding-top: {{ section.settings.padding_top }}px;--section-padding-bottom: {{ section.settings.padding_bottom }}px;"
>
  <div class="collection page-width">
    {%- paginate collection.products by section.settings.products_per_page -%}
      <div class="collection__content flex flex-col">
        <div class="collection-header-row" style="display: flex; justify-content: flex-start; margin-bottom: 20px;">
          <p class="collection-count" style="margin: 0; font-size: 14px; opacity: 0.8; font-weight: 500;">
            {{ collections.all.all_products_count }} products
          </p>
        </div>

        <div class="flex flex-col flex-grow" id="ProductGridWrapper">
          <div id="ProductGridContainer">
            <div
              id="GridTrack"
              class="grid-track f-grid"
              data-desktop-cols="{{ columns_desktop }}"
              data-mobile-cols="{{ columns_mobile }}"
              data-items-per-page="{{ items_per_page }}"
            >
              {% comment %} --- KHỞI TẠO BIẾN KIỂM TRA TRÙNG LẶP --- {% endcomment %}
              {%- assign displayed_products = '|' -%}
              {%- assign displayed_titles = '|' -%} 

              {% comment %} --- PHẦN 1: SẢN PHẨM TRONG COLLECTION --- {% endcomment %}
              {%- for product in collection.products -%}
                
                {% comment %} --- XỬ LÝ LỌC TRÙNG TÊN --- {% endcomment %}
                {%- assign clean_title = product.title | replace: 'FREE TODAY - ', '' | strip -%}
                {%- assign check_title = '|' | append: clean_title | append: '|' -%}

                {%- unless displayed_titles contains check_title -%}
                  
                  {%- assign displayed_products = displayed_products | append: product.handle | append: '|' -%}
                  {%- assign displayed_titles = displayed_titles | append: clean_title | append: '|' -%}

                  <div class="grid-item hidden-item">
                    {% comment %} --- Overlay Link --- {% endcomment %}
                    <a href="{{ product.url }}" style="position: absolute; top: 0; left: 0; width: 100%; height: 100%; z-index: 2; cursor: pointer;">
                        <span class="visually-hidden">{{ product.title }}</span>
                    </a>
                    {%- render 'card-product-mix',
                      product: product,
                      section_id: section.id,
                      index: forloop.index,
                      show_vendor: false,
                      show_rating: false
                    -%}
                  </div>

                {%- endunless -%}
              {%- endfor -%}

              {% comment %} --- PHẦN 2: SẢN PHẨM CÒN LẠI (MIX) --- {% endcomment %}
              {%- if paginate.current_page == paginate.pages or paginate.pages == 0 -%}
                {%- assign other_products = collections.all.products | sort: 'price' -%}
                {%- assign counter = 0 -%}
                {%- assign limit_extra = 48 -%}

                {%- for product in other_products -%}
                  
                  {% comment %} --- BƯỚC 1: LẤY TÊN GỐC (BỎ CHỮ FREE TODAY) --- {% endcomment %}
                  {%- assign clean_title = product.title | replace: 'FREE TODAY - ', '' | strip -%}
                  {%- assign check_title = '|' | append: clean_title | append: '|' -%}

                  {% comment %} --- BƯỚC 2: KIỂM TRA XEM TÊN NÀY ĐÃ XUẤT HIỆN CHƯA --- {% endcomment %}
                  {%- unless displayed_titles contains check_title -%}
                    
                      {%- if counter < limit_extra -%}
                        <div class="grid-item hidden-item">
                          {% comment %} --- Overlay Link --- {% endcomment %}
                          <a href="{{ product.url }}" style="position: absolute; top: 0; left: 0; width: 100%; height: 100%; z-index: 2; cursor: pointer;">
                              <span class="visually-hidden">{{ product.title }}</span>
                          </a>

                          {%-
                            render 'card-product-mix',
                            product: product,
                            section_id: section.id,
                            index: forloop.index,
                            show_vendor: false,
                            show_rating: false
                          -%}
                        </div>
                        {%- assign counter = counter | plus: 1 -%}
                        
                        {% comment %} --- GHI NHỚ LẠI TÊN ĐÃ HIỂN THỊ --- {% endcomment %}
                        {%- assign displayed_products = displayed_products | append: product.handle | append: '|' -%}
                        {%- assign displayed_titles = displayed_titles | append: clean_title | append: '|' -%}
                      {%- endif -%}
                      
                  {%- endunless -%}
                {%- endfor -%}
              {%- endif -%}
            </div>
            <div id="custom-pagination" class="custom-pagination-container"></div>
          </div>
        </div>
      </div>
    {%- endpaginate -%}
  </div>
</div>

<style>
    /* GRID LAYOUT */
    .grid-track {
      display: grid;
      grid-template-columns: repeat({{ columns_desktop }}, 1fr);
      gap: 20px;
      margin-bottom: 30px;
      min-height: 400px;
    }

    /* Ẩn hiện item */
    .grid-item { opacity: 1; transition: opacity 0.3s ease; }
    .grid-item.hidden-item { display: none; opacity: 0; }

    @media (max-width: 767px) {
      .grid-track {
        grid-template-columns: repeat({{ columns_mobile }}, 1fr);
        gap: 10px;
      }
    }

    /* FOOTER CONTROLS */
    .carousel-footer-controls {
      display: flex;
      align-items: center;
      justify-content: center; /* Căn giữa */
      gap: 15px;
      padding-top: 15px;
      border-top: 1px solid #f0f0f0;
    }

    .carousel-btn {
      width: 40px;
      height: 40px;
      border: 1px solid #ddd;
      border-radius: 50%;
      background: white;
      display: flex;
      align-items: center;
      justify-content: center;
      cursor: pointer;
      transition: all 0.2s;
      color: #333;
    }
    .carousel-btn:hover { background: #000; color: #fff; border-color: #000; }
    .carousel-btn:disabled { opacity: 0.3; cursor: not-allowed; background: #f9f9f9; color: #ccc; border-color: #eee;}

    .carousel-counter {
      font-size: 14px;
      font-weight: 600;
      min-width: 80px;
      text-align: center;
      letter-spacing: 0.5px;
    }
    /* FIX LỖI ẢNH HOVER */

  /* Mặc định: Ẩn ảnh thứ 2 (ảnh hover) đi */
  .card__media .media--hover-effect > img:nth-child(2) {
      opacity: 0 !important;
      transition: opacity 0.3s ease;
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      z-index: 2;
  }

  /* Khi rê chuột vào card: Hiện ảnh thứ 2 lên */
  .card:hover .card__media .media--hover-effect > img:nth-child(2) {
      opacity: 1 !important;
  }
  /* --- CSS PHÂN TRANG MỚI (1 2 3 Next) --- */
    .custom-pagination-container {
        display: flex;
        justify-content: center;
        align-items: center;
        gap: 15px;
        margin-top: 30px;
        padding-top: 20px;
        font-family: inherit;
        font-size: 16px;
        color: #333;
    }

    .pagination-number {
        cursor: pointer;
        padding: 5px 10px;
        transition: all 0.2s;
        opacity: 0.6;
        border-bottom: 2px solid transparent;
    }

    .pagination-number:hover {
        color: #000;
        opacity: 1;
    }

    /* Trang đang chọn */
    .pagination-number.active {
        font-weight: bold;
        color: #000;
        opacity: 1;
        border-bottom: 2px solid #000;
    }

    .pagination-next {
        cursor: pointer;
        margin-left: 10px;
        font-weight: 500;
        display: flex; align-items: center;
    }
    
    .pagination-next:hover {
        text-decoration: underline;
    }

    /* Thêm đoạn này cho nút Prev */
    .pagination-prev {
        cursor: pointer;
        margin-right: 10px; /* Cách dãy số ra một chút */
        font-weight: 500;
        display: flex; align-items: center;
    }
    
    .pagination-prev:hover {
        text-decoration: underline;
    }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    const track = document.getElementById('GridTrack');
    const items = track.querySelectorAll('.grid-item');
    const paginationContainer = document.getElementById('custom-pagination');

    if (!track || items.length === 0) return;

    // Lấy thông số từ HTML
    let itemsPerPage = parseInt(track.getAttribute('data-items-per-page')) || 12;

    // Nếu màn hình nhỏ (Mobile) muốn hiện ít hơn thì mở dòng dưới ra:
    if (window.innerWidth < 768) {
      // itemsPerPage = 4; 
    }

    const totalItems = items.length;
    const totalPages = Math.ceil(totalItems / itemsPerPage);
    let currentPage = 1;

    // --- HÀM 1: VẼ DÃY SỐ TRANG ---
    function renderPagination() {
        paginationContainer.innerHTML = ''; // Xóa trắng cũ

        // Vẽ các số 1, 2, 3...
        for (let i = 1; i <= totalPages; i++) {
            const pageBtn = document.createElement('span');
            pageBtn.innerText = i;
            pageBtn.className = 'pagination-number';
            
            // Nếu là trang hiện tại thì thêm class active
            if (i === currentPage) pageBtn.classList.add('active');
            
            // Bắt sự kiện click
            pageBtn.onclick = function() {
                showPage(i);
            };
            paginationContainer.appendChild(pageBtn);
        }

        // Vẽ nút Next > (Nếu chưa phải trang cuối)
        if (currentPage < totalPages) {
            const nextBtn = document.createElement('span');
            nextBtn.innerHTML = 'Next &rsaquo;'; 
            nextBtn.className = 'pagination-next';
            nextBtn.onclick = function() {
                showPage(currentPage + 1);
            };
            paginationContainer.appendChild(nextBtn);
        }
    }

    // --- HÀM 2: HIỂN THỊ SẢN PHẨM ---
    function showPage(page) {
      if (page < 1) page = 1;
      if (page > totalPages) page = totalPages;
      currentPage = page;

      const start = (currentPage - 1) * itemsPerPage;
      const end = start + itemsPerPage;

      items.forEach((item, index) => {
        if (index >= start && index < end) {
          item.classList.remove('hidden-item');
        } else {
          item.classList.add('hidden-item');
        }
      });

      // Vẽ lại số trang sau khi chuyển
      renderPagination();
    }

    // Chạy lần đầu tiên
    showPage(1);
  });
</script>

{% schema %}
{
  "name": "Mix Price Grid (Paged)",
  "class": "collection-section",
  "settings": [
    {
      "type": "paragraph",
      "content": "Hiển thị dạng lưới, phân trang tại chỗ, hiển thị tổng số lượng bên trái."
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color scheme",
      "default": "scheme-1"
    },
    {
      "type": "range",
      "id": "products_per_page",
      "min": 12,
      "max": 50,
      "step": 2,
      "default": 48,
      "label": "Total Loaded Products",
      "info": "Tổng số sản phẩm tải về để phân trang."
    },
    {
      "type": "header",
      "content": "Grid Settings"
    },
    {
      "type": "range",
      "id": "columns_desktop",
      "min": 2,
      "max": 5,
      "step": 1,
      "default": 4,
      "label": "Columns (Số cột)"
    },
    {
      "type": "range",
      "id": "rows_desktop",
      "min": 1,
      "max": 5,
      "step": 1,
      "default": 3,
      "label": "Rows (Số hàng hiển thị)",
      "info": "Ví dụ: 4 cột x 3 hàng = 12 sản phẩm / trang."
    },
    {
      "type": "select",
      "id": "columns_mobile",
      "default": "2",
      "label": "Columns on Mobile",
      "options": [
        { "value": "1", "label": "1 Column" },
        { "value": "2", "label": "2 Columns" }
      ]
    },
    {
      "type": "header",
      "content": "Spacing"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 2,
      "unit": "px",
      "label": "Padding Top",
      "default": 30
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 2,
      "unit": "px",
      "label": "Padding Bottom",
      "default": 30
    },
    {
      "type": "checkbox",
      "id": "show_section_divider",
      "default": false,
      "label": "Show Divider"
    },
    {
      "type": "select",
      "id": "divider_width",
      "options": [
        { "value": "fixed", "label": "Fixed" },
        { "value": "full", "label": "Full" }
      ],
      "default": "fixed",
      "label": "Divider width"
    }
  ],
  "presets": [
    {
      "name": "Mix Price Grid (Paged)",
      "category": "Collection"
    }
  ]
}
{% endschema %}
