{{ 'collection.css' | asset_url | stylesheet_tag }}

{%- liquid
  # --- LOGIC MỚI: XÁC ĐỊNH COLLECTION ---
  # Nếu người dùng chọn collection trong cài đặt (khi ở Home), dùng nó.
  # Nếu không, dùng collection mặc định của trang hiện tại.
  assign selected_collection = collections[section.settings.collection_id] | default: collection
  
  assign columns_desktop = section.settings.columns_desktop
  assign columns_mobile = section.settings.columns_mobile | times: 1
  assign rows_desktop = section.settings.rows_desktop
  
  # Tính tổng số sản phẩm hiển thị 1 lần
  assign items_per_page = columns_desktop | times: rows_desktop
-%}

{% render 'divider',
  show_divider: section.settings.show_section_divider,
  divider_width: section.settings.divider_width
%}

<div
  class="section--padding color-{{ section.settings.color_scheme }}"
  style="--section-padding-top: {{ section.settings.padding_top }}px;--section-padding-bottom: {{ section.settings.padding_bottom }}px;"
>
  <div class="collection page-width">
    {%- if selected_collection != empty -%}
      {%- paginate selected_collection.products by 50 -%}
        <div class="collection__content flex flex-col">
          
          <div class="collection-header-row" style="display: flex; justify-content: flex-start; margin-bottom: 20px; align-items: center; gap: 10px;">
             {% if section.settings.show_title %}
                <h2 class="h4" style="margin:0;">{{ selected_collection.title }}</h2>
                <span style="opacity: 0.5;">|</span>
             {% endif %}
             
             <p class="collection-count" style="margin: 0; font-size: 14px; opacity: 0.8; font-weight: 500;">
                {{ selected_collection.all_products_count }} products
             </p>
          </div>
  
          <div class="flex flex-col flex-grow" id="ProductGridWrapper">
            <div id="ProductGridContainer">
              
              <div id="GridTrack" 
                   class="grid-track f-grid"
                   data-desktop-cols="{{ columns_desktop }}"
                   data-mobile-cols="{{ columns_mobile }}"
                   data-items-per-page="{{ items_per_page }}">
                
                {%- assign displayed_products = "|" -%}
  
                {% comment %} --- PHẦN 1: SẢN PHẨM TRONG COLLECTION ĐÃ CHỌN --- {% endcomment %}
                {%- for product in selected_collection.products -%}
                  {%- assign displayed_products = displayed_products | append: product.handle | append: "|" -%}
                  <div class="grid-item hidden-item">
                    {%- render 'card-product-mix',
                      product: product,
                      section_id: section.id,
                      index: forloop.index,
                      show_vendor: false,
                      show_rating: false,
                      show_secondary_image: true 
                    -%}
                  </div>
                {%- endfor -%}
  
                {% comment %} --- PHẦN 2: CÁC SẢN PHẨM CÒN LẠI (MIX PRICE) --- {% endcomment %}
                {%- assign other_products = collections['all'].products | sort: 'price' -%}
                {%- assign counter = 0 -%}
                {%- assign limit_extra = 48 -%} 
  
                {%- for product in other_products -%}
                  {%- assign check_handle = "|" | append: product.handle | append: "|" -%}
                  
                  {%- unless displayed_products contains check_handle -%}
                    {%- if counter < limit_extra -%}
                      <div class="grid-item hidden-item">
                        {%- render 'card-product-mix',
                          product: product,
                          section_id: section.id,
                          index: forloop.index,
                          show_vendor: false,
                          show_rating: false,
                          show_secondary_image: true
                        -%}
                      </div>
                      {%- assign counter = counter | plus: 1 -%}
                    {%- endif -%}
                  {%- endunless -%}
                {%- endfor -%}
  
              </div>
  
              <div class="carousel-footer-controls">
                <button id="btn-prev" class="carousel-btn" aria-label="Previous">
                  <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polyline points="15 18 9 12 15 6"></polyline></svg>
                </button>
                
                <span id="page-counter" class="carousel-counter">Page 1 / 1</span>
                
                <button id="btn-next" class="carousel-btn" aria-label="Next">
                  <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polyline points="9 18 15 12 9 6"></polyline></svg>
                </button>
              </div>
  
            </div>
          </div>
        </div>
      {%- endpaginate -%}
    {%- else -%}
        <div class="page-width text-center" style="padding: 50px 0;">
            <p>Please select a collection in section settings.</p>
        </div>
    {%- endif -%}
  </div>
</div>

<style>
  .grid-track {
    display: grid;
    grid-template-columns: repeat({{ columns_desktop }}, 1fr);
    gap: 20px;
    margin-bottom: 30px;
    min-height: 400px; 
  }
  .grid-item { opacity: 1; transition: opacity 0.3s ease; }
  .grid-item.hidden-item { display: none; opacity: 0; }
  
  @media (max-width: 767px) {
    .grid-track {
      grid-template-columns: repeat({{ columns_mobile }}, 1fr);
      gap: 10px;
    }
  }

  .carousel-footer-controls {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 15px;
    padding-top: 15px;
    border-top: 1px solid #f0f0f0;
  }
  
  .carousel-btn {
    width: 40px;
    height: 40px;
    border: 1px solid #ddd;
    border-radius: 50%;
    background: white;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    transition: all 0.2s;
    color: #333;
  }
  .carousel-btn:hover { background: #000; color: #fff; border-color: #000; }
  .carousel-btn:disabled { opacity: 0.3; cursor: not-allowed; background: #f9f9f9; color: #ccc; border-color: #eee;}
  
  .carousel-counter { 
    font-size: 14px; 
    font-weight: 600; 
    min-width: 80px; 
    text-align: center;
    letter-spacing: 0.5px;
  }
</style>

<script>
document.addEventListener("DOMContentLoaded", function() {
  // Lấy tất cả các track trong trường hợp có nhiều section giống nhau trên 1 trang
  const tracks = document.querySelectorAll('.grid-track');
  
  tracks.forEach(track => {
      const container = track.closest('#ProductGridContainer');
      const items = track.querySelectorAll('.grid-item');
      const btnPrev = container.querySelector('#btn-prev');
      const btnNext = container.querySelector('#btn-next');
      const counterEl = container.querySelector('#page-counter');

      if (items.length === 0) return;

      let itemsPerPage = parseInt(track.getAttribute('data-items-per-page')) || 12;
      
      const totalItems = items.length;
      const totalPages = Math.ceil(totalItems / itemsPerPage);
      let currentPage = 1;

      function showPage(page) {
        if (page < 1) page = 1;
        if (page > totalPages) page = totalPages;
        currentPage = page;

        const start = (currentPage - 1) * itemsPerPage;
        const end = start + itemsPerPage;

        items.forEach((item, index) => {
          if (index >= start && index < end) {
            item.classList.remove('hidden-item');
          } else {
            item.classList.add('hidden-item');
          }
        });

        if(counterEl) counterEl.innerText = `Page ${currentPage} / ${totalPages}`;
        if(btnPrev) btnPrev.disabled = currentPage === 1;
        if(btnNext) btnNext.disabled = currentPage === totalPages;
      }

      if(btnPrev) btnPrev.addEventListener('click', () => showPage(currentPage - 1));
      if(btnNext) btnNext.addEventListener('click', () => showPage(currentPage + 1));

      showPage(1);
  });
});
</script>

{% schema %}
{
  "name": "Mix Price Grid (Paged)",
  "class": "collection-section",
  "settings": [
    {
      "type": "paragraph",
      "content": "Hiển thị lưới sản phẩm với phân trang tại chỗ."
    },
    {
      "type": "header",
      "content": "Data Source"
    },
    {
      "type": "collection",
      "id": "collection_id",
      "label": "Select Collection (For Homepage)"
    },
    {
        "type": "checkbox",
        "id": "show_title",
        "label": "Show Collection Title",
        "default": true
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color scheme",
      "default": "scheme-1"
    },
    {
      "type": "range",
      "id": "products_per_page",
      "min": 12,
      "max": 50,
      "step": 2,
      "default": 48,
      "label": "Total Loaded Products",
      "info": "Tổng số sản phẩm tải về (Max 50)."
    },
    {
        "type": "header",
        "content": "Grid Settings"
    },
    {
      "type": "range",
      "id": "columns_desktop",
      "min": 2,
      "max": 5,
      "step": 1,
      "default": 4,
      "label": "Columns (Số cột)"
    },
    {
      "type": "range",
      "id": "rows_desktop",
      "min": 1,
      "max": 5,
      "step": 1,
      "default": 3,
      "label": "Rows (Số hàng hiển thị)",
      "info": "Số sản phẩm mỗi trang = Cột x Hàng."
    },
    {
      "type": "select",
      "id": "columns_mobile",
      "default": "2",
      "label": "Columns on Mobile",
      "options": [
        { "value": "1", "label": "1 Column" },
        { "value": "2", "label": "2 Columns" }
      ]
    },
    {
        "type": "header",
        "content": "Spacing"
    },
    {
        "type": "range",
        "id": "padding_top",
        "min": 0,
        "max": 100,
        "step": 2,
        "unit": "px",
        "label": "Padding Top",
        "default": 30
    },
    {
        "type": "range",
        "id": "padding_bottom",
        "min": 0,
        "max": 100,
        "step": 2,
        "unit": "px",
        "label": "Padding Bottom",
        "default": 30
    },
    {
      "type": "checkbox",
      "id": "show_section_divider",
      "default": false,
      "label": "Show Divider"
    },
    {
      "type": "select",
      "id": "divider_width",
      "options": [
        { "value": "fixed", "label": "Fixed" },
        { "value": "full", "label": "Full" }
      ],
      "default": "fixed",
      "label": "Divider width"
    }
  ],
  "presets": [
    {
      "name": "Mix Price Grid (Paged)",
      "category": "Collection"
    }
  ]
}
{% endschema %}