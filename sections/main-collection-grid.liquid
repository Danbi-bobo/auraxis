{{ 'collection.css' | asset_url | stylesheet_tag }}

{%- liquid
  assign columns_desktop = section.settings.columns_desktop
  assign columns_mobile = section.settings.columns_mobile | times: 1
  assign rows_desktop = section.settings.rows_desktop
  
  # Tính tổng số sản phẩm hiển thị 1 lần (Cột x Hàng)
  assign items_per_page = columns_desktop | times: rows_desktop
  
  # Giới hạn tổng số lượng sản phẩm tải về
  assign total_limit = section.settings.products_per_page
-%}

{% render 'divider',
  show_divider: section.settings.show_section_divider,
  divider_width: section.settings.divider_width
%}

<div
  class="section--padding color-{{ section.settings.color_scheme }} mix-price-section"
  style="--section-padding-top: {{ section.settings.padding_top }}px;--section-padding-bottom: {{ section.settings.padding_bottom }}px;"
  data-section-id="{{ section.id }}"
>
  <div class="collection page-width">
      <div class="collection__content flex flex-col">
        
        {% if section.settings.show_title %}
        <div class="collection-header-row" style="display: flex; justify-content: flex-start; margin-bottom: 20px; align-items: center; gap: 10px;">
             <h2 class="h4" style="margin:0;">
                {%- if section.settings.custom_title != blank -%}
                    {{ section.settings.custom_title }}
                {%- else -%}
                    Mix Price Collections
                {%- endif -%}
             </h2>
        </div>
        {% endif %}

        <div class="flex flex-col flex-grow" id="ProductGridWrapper-{{ section.id }}">
          <div id="ProductGridContainer-{{ section.id }}">
            
            <div id="GridTrack-{{ section.id }}" 
                 class="grid-track f-grid"
                 data-desktop-cols="{{ columns_desktop }}"
                 data-mobile-cols="{{ columns_mobile }}"
                 data-items-per-page="{{ items_per_page }}">
              
              {%- assign displayed_products = "|" -%}
              {%- assign counter = 0 -%}

              {% comment %} 
                =========================================
                PHẦN 1: LOOP QUA CÁC BLOCK COLLECTION (THEO THỨ TỰ)
                =========================================
              {% endcomment %}
              {%- for block in section.blocks -%}
                {%- assign target_collection = collections[block.settings.collection_id] -%}
                
                {%- if target_collection != blank and counter < total_limit -%}
                  {%- for product in target_collection.products -%}
                    {%- assign check_handle = "|" | append: product.handle | append: "|" -%}
                    
                    {% comment %} Kiểm tra trùng lặp và giới hạn {% endcomment %}
                    {%- unless displayed_products contains check_handle -%}
                      {%- if counter < total_limit -%}
                        {%- assign displayed_products = displayed_products | append: product.handle | append: "|" -%}
                        
                        <div class="grid-item hidden-item">
                          {%- render 'card-product',
                            product: product,
                            section_id: section.id,
                            index: counter,
                            show_vendor: false,
                            show_rating: false,
                            show_secondary_image: true 
                          -%}
                        </div>
                        {%- assign counter = counter | plus: 1 -%}
                      {%- endif -%}
                    {%- endunless -%}
                  {%- endfor -%}
                {%- endif -%}
              {%- endfor -%}

              {% comment %} 
                =========================================
                PHẦN 2: LẤY SẢN PHẨM CÒN LẠI (FILL ĐẦY CHỖ TRỐNG)
                Nếu vẫn chưa đủ số lượng limit, lấy từ tất cả sp (xếp theo giá)
                =========================================
              {% endcomment %}
              {%- if counter < total_limit -%}
                {%- assign other_products = collections['all'].products | sort: 'price' -%}
                
                {%- for product in other_products -%}
                  {%- assign check_handle = "|" | append: product.handle | append: "|" -%}
                  
                  {%- unless displayed_products contains check_handle -%}
                    {%- if counter < total_limit -%}
                      <div class="grid-item hidden-item">
                        {%- render 'card-product-mix',
                          product: product,
                          section_id: section.id,
                          index: counter,
                          show_vendor: false,
                          show_rating: false,
                          show_secondary_image: true
                        -%}
                      </div>
                      {%- assign counter = counter | plus: 1 -%}
                    {%- endif -%}
                  {%- endunless -%}
                {%- endfor -%}
              {%- endif -%}

            </div>

            <div class="carousel-footer-controls">
              <button id="btn-prev-{{ section.id }}" class="carousel-btn" aria-label="Previous">
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polyline points="15 18 9 12 15 6"></polyline></svg>
              </button>
              
              <span id="page-counter-{{ section.id }}" class="carousel-counter">Page 1 / 1</span>
              
              <button id="btn-next-{{ section.id }}" class="carousel-btn" aria-label="Next">
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polyline points="9 18 15 12 9 6"></polyline></svg>
              </button>
            </div>

          </div>
        </div>
      </div>
  </div>
</div>

<style>
  .grid-track {
    display: grid;
    grid-template-columns: repeat({{ columns_desktop }}, 1fr);
    gap: 20px;
    margin-bottom: 30px;
    min-height: 400px; 
  }
  .grid-item { opacity: 1; transition: opacity 0.3s ease; }
  .grid-item.hidden-item { display: none; opacity: 0; }
  
  @media (max-width: 767px) {
    .grid-track {
      grid-template-columns: repeat({{ columns_mobile }}, 1fr);
      gap: 10px;
    }
  }

  .carousel-footer-controls {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 15px;
    padding-top: 15px;
    border-top: 1px solid #f0f0f0;
  }
  
  .carousel-btn {
    width: 40px;
    height: 40px;
    border: 1px solid #ddd;
    border-radius: 50%;
    background: white;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    transition: all 0.2s;
    color: #333;
  }
  .carousel-btn:hover { background: #000; color: #fff; border-color: #000; }
  .carousel-btn:disabled { opacity: 0.3; cursor: not-allowed; background: #f9f9f9; color: #ccc; border-color: #eee;}
  
  .carousel-counter { 
    font-size: 14px; 
    font-weight: 600; 
    min-width: 80px; 
    text-align: center;
    letter-spacing: 0.5px;
  }
</style>

<script>
  (function() {
    var sectionId = "{{ section.id }}";
    var track = document.getElementById('GridTrack-' + sectionId);
    
    if (!track) return;

    var items = track.querySelectorAll('.grid-item');
    var btnPrev = document.getElementById('btn-prev-' + sectionId);
    var btnNext = document.getElementById('btn-next-' + sectionId);
    var counterEl = document.getElementById('page-counter-' + sectionId);

    if (items.length === 0) return;

    var itemsPerPage = parseInt(track.getAttribute('data-items-per-page')) || 12;
    
    if (window.innerWidth < 768) {
       // itemsPerPage = Math.ceil(itemsPerPage / 2); 
    }

    var totalItems = items.length;
    var totalPages = Math.ceil(totalItems / itemsPerPage);
    var currentPage = 1;

    function showPage(page) {
      if (page < 1) page = 1;
      if (page > totalPages) page = totalPages;
      currentPage = page;

      var start = (currentPage - 1) * itemsPerPage;
      var end = start + itemsPerPage;

      items.forEach(function(item, index) {
        if (index >= start && index < end) {
          item.classList.remove('hidden-item');
        } else {
          item.classList.add('hidden-item');
        }
      });

      if(counterEl) counterEl.innerText = 'Page ' + currentPage + ' / ' + totalPages;
      if(btnPrev) btnPrev.disabled = currentPage === 1;
      if(btnNext) btnNext.disabled = currentPage === totalPages;
    }

    if(btnPrev) btnPrev.addEventListener('click', function() { showPage(currentPage - 1); });
    if(btnNext) btnNext.addEventListener('click', function() { showPage(currentPage + 1); });

    showPage(1);
  })();
</script>

{% schema %}
{
  "name": "Mix Price Grid (Multi)",
  "class": "collection-section",
  "settings": [
    {
      "type": "paragraph",
      "content": "Thêm các 'Collection Group' ở dưới để chọn Collection hiển thị theo thứ tự."
    },
    {
        "type": "text",
        "id": "custom_title",
        "label": "Section Heading",
        "default": "Featured Collections"
    },
    {
        "type": "checkbox",
        "id": "show_title",
        "label": "Show Heading",
        "default": true
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color scheme",
      "default": "scheme-1"
    },
    {
      "type": "range",
      "id": "products_per_page",
      "min": 12,
      "max": 100,
      "step": 2,
      "default": 48,
      "label": "Total Loaded Products",
      "info": "Tổng số lượng tối đa hiển thị (bao gồm tất cả các collection cộng lại)."
    },
    {
        "type": "header",
        "content": "Grid Settings"
    },
    {
      "type": "range",
      "id": "columns_desktop",
      "min": 2,
      "max": 5,
      "step": 1,
      "default": 4,
      "label": "Columns (Số cột)"
    },
    {
      "type": "range",
      "id": "rows_desktop",
      "min": 1,
      "max": 5,
      "step": 1,
      "default": 3,
      "label": "Rows (Số hàng hiển thị)",
      "info": "Số sản phẩm mỗi trang = Cột x Hàng."
    },
    {
      "type": "select",
      "id": "columns_mobile",
      "default": "2",
      "label": "Columns on Mobile",
      "options": [
        { "value": "1", "label": "1 Column" },
        { "value": "2", "label": "2 Columns" }
      ]
    },
    {
        "type": "header",
        "content": "Spacing"
    },
    {
        "type": "range",
        "id": "padding_top",
        "min": 0,
        "max": 100,
        "step": 2,
        "unit": "px",
        "label": "Padding Top",
        "default": 30
    },
    {
        "type": "range",
        "id": "padding_bottom",
        "min": 0,
        "max": 100,
        "step": 2,
        "unit": "px",
        "label": "Padding Bottom",
        "default": 30
    },
    {
      "type": "checkbox",
      "id": "show_section_divider",
      "default": false,
      "label": "Show Divider"
    },
    {
      "type": "select",
      "id": "divider_width",
      "options": [
        { "value": "fixed", "label": "Fixed" },
        { "value": "full", "label": "Full" }
      ],
      "default": "fixed",
      "label": "Divider width"
    }
  ],
  "blocks": [
    {
      "type": "collection_group",
      "name": "Collection Group",
      "settings": [
        {
          "type": "collection",
          "id": "collection_id",
          "label": "Select Collection"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Mix Price Grid (Multi)",
      "category": "Collection",
      "blocks": [
        { "type": "collection_group" }
      ]
    }
  ]
}
{% endschema %}