{{ 'collection.css' | asset_url | stylesheet_tag }}

{%- liquid
  assign columns_desktop = section.settings.columns_desktop
  assign columns_mobile = section.settings.columns_mobile | times: 1
  assign rows_desktop = section.settings.rows_desktop

  # Tính tổng số sản phẩm hiển thị 1 lần (Cột x Hàng)
  assign items_per_page = columns_desktop | times: rows_desktop
-%}

{% render 'divider',
  show_divider: section.settings.show_section_divider,
  divider_width: section.settings.divider_width
%}

<div
  class="section--padding color-{{ section.settings.color_scheme }}"
  style="--section-padding-top: {{ section.settings.padding_top }}px;--section-padding-bottom: {{ section.settings.padding_bottom }}px;"
>
  <div class="collection page-width">
    {%- paginate collection.products by section.settings.products_per_page -%}
      <div class="collection__content flex flex-col">
        <div class="collection-header-row" style="display: flex; justify-content: flex-start; margin-bottom: 20px;">
          <p class="collection-count" style="margin: 0; font-size: 14px; opacity: 0.8; font-weight: 500;">
            {{ collections.all.all_products_count }} products
          </p>
        </div>

        <div class="flex flex-col flex-grow" id="ProductGridWrapper">
          <div id="ProductGridContainer">
            <div
              id="GridTrack"
              class="grid-track f-grid"
              data-desktop-cols="{{ columns_desktop }}"
              data-mobile-cols="{{ columns_mobile }}"
              data-items-per-page="{{ items_per_page }}"
            >
              {%- assign displayed_products = '|' -%}

              {% comment %} --- PHẦN 1: SẢN PHẨM TRONG COLLECTION --- {% endcomment %}
              {%- for product in collection.products -%}
                {%- assign displayed_products = displayed_products | append: product.handle | append: '|' -%}
                <div class="grid-item hidden-item">
                  {%- render 'card-product-mix',
                    product: product,
                    section_id: section.id,
                    index: forloop.index,
                    show_vendor: false,
                    show_rating: false
                  -%}
                </div>
              {%- endfor -%}
            </div>

            <div class="carousel-footer-controls">
              <button id="btn-prev" class="carousel-btn" aria-label="Previous">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  width="20"
                  height="20"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                >
                  <polyline points="15 18 9 12 15 6"></polyline>
                </svg>
              </button>

              <span id="page-counter" class="carousel-counter">Page 1 / 1</span>

              <button id="btn-next" class="carousel-btn" aria-label="Next">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  width="20"
                  height="20"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                >
                  <polyline points="9 18 15 12 9 6"></polyline>
                </svg>
              </button>
            </div>
          </div>
        </div>
      </div>
    {%- endpaginate -%}
  </div>
</div>

<style>
    /* GRID LAYOUT */
    .grid-track {
      display: grid;
      grid-template-columns: repeat({{ columns_desktop }}, 1fr);
      gap: 20px;
      margin-bottom: 30px;
      min-height: 400px;
    }

    /* Ẩn hiện item */
    .grid-item { opacity: 1; transition: opacity 0.3s ease; }
    .grid-item.hidden-item { display: none; opacity: 0; }

    @media (max-width: 767px) {
      .grid-track {
        grid-template-columns: repeat({{ columns_mobile }}, 1fr);
        gap: 10px;
      }
    }

    /* FOOTER CONTROLS */
    .carousel-footer-controls {
      display: flex;
      align-items: center;
      justify-content: center; /* Căn giữa */
      gap: 15px;
      padding-top: 15px;
      border-top: 1px solid #f0f0f0;
    }

    .carousel-btn {
      width: 40px;
      height: 40px;
      border: 1px solid #ddd;
      border-radius: 50%;
      background: white;
      display: flex;
      align-items: center;
      justify-content: center;
      cursor: pointer;
      transition: all 0.2s;
      color: #333;
    }
    .carousel-btn:hover { background: #000; color: #fff; border-color: #000; }
    .carousel-btn:disabled { opacity: 0.3; cursor: not-allowed; background: #f9f9f9; color: #ccc; border-color: #eee;}

    .carousel-counter {
      font-size: 14px;
      font-weight: 600;
      min-width: 80px;
      text-align: center;
      letter-spacing: 0.5px;
    }
    /* FIX LỖI ẢNH HOVER */

  /* Mặc định: Ẩn ảnh thứ 2 (ảnh hover) đi */
  .card__media .media--hover-effect > img:nth-child(2) {
      opacity: 0 !important;
      transition: opacity 0.3s ease;
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      z-index: 2;
  }

  /* Khi rê chuột vào card: Hiện ảnh thứ 2 lên */
  .card:hover .card__media .media--hover-effect > img:nth-child(2) {
      opacity: 1 !important;
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    const track = document.getElementById('GridTrack');
    const items = track.querySelectorAll('.grid-item');
    const btnPrev = document.getElementById('btn-prev');
    const btnNext = document.getElementById('btn-next');
    const counterEl = document.getElementById('page-counter');

    if (!track || items.length === 0) return;

    // Lấy cấu hình số lượng từ data attribute
    let itemsPerPage = parseInt(track.getAttribute('data-items-per-page')) || 12;

    // Mobile config (nếu muốn)
    if (window.innerWidth < 768) {
      // itemsPerPage = 4; // Ví dụ
    }

    const totalItems = items.length;
    const totalPages = Math.ceil(totalItems / itemsPerPage);
    let currentPage = 1;

    function showPage(page) {
      if (page < 1) page = 1;
      if (page > totalPages) page = totalPages;
      currentPage = page;

      const start = (currentPage - 1) * itemsPerPage;
      const end = start + itemsPerPage;

      items.forEach((item, index) => {
        if (index >= start && index < end) {
          item.classList.remove('hidden-item');
        } else {
          item.classList.add('hidden-item');
        }
      });

      counterEl.innerText = `Page ${currentPage} / ${totalPages}`;
      btnPrev.disabled = currentPage === 1;
      btnNext.disabled = currentPage === totalPages;
    }

    btnPrev.addEventListener('click', () => showPage(currentPage - 1));
    btnNext.addEventListener('click', () => showPage(currentPage + 1));

    showPage(1);
  });
</script>

{% schema %}
{
  "name": "Mix Price Grid (Paged)",
  "class": "collection-section",
  "settings": [
    {
      "type": "paragraph",
      "content": "Hiển thị dạng lưới, phân trang tại chỗ, hiển thị tổng số lượng bên trái."
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color scheme",
      "default": "scheme-1"
    },
    {
      "type": "range",
      "id": "products_per_page",
      "min": 12,
      "max": 50,
      "step": 2,
      "default": 48,
      "label": "Total Loaded Products",
      "info": "Tổng số sản phẩm tải về để phân trang."
    },
    {
      "type": "header",
      "content": "Grid Settings"
    },
    {
      "type": "range",
      "id": "columns_desktop",
      "min": 2,
      "max": 5,
      "step": 1,
      "default": 4,
      "label": "Columns (Số cột)"
    },
    {
      "type": "range",
      "id": "rows_desktop",
      "min": 1,
      "max": 5,
      "step": 1,
      "default": 3,
      "label": "Rows (Số hàng hiển thị)",
      "info": "Ví dụ: 4 cột x 3 hàng = 12 sản phẩm / trang."
    },
    {
      "type": "select",
      "id": "columns_mobile",
      "default": "2",
      "label": "Columns on Mobile",
      "options": [
        { "value": "1", "label": "1 Column" },
        { "value": "2", "label": "2 Columns" }
      ]
    },
    {
      "type": "header",
      "content": "Spacing"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 2,
      "unit": "px",
      "label": "Padding Top",
      "default": 30
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 2,
      "unit": "px",
      "label": "Padding Bottom",
      "default": 30
    },
    {
      "type": "checkbox",
      "id": "show_section_divider",
      "default": false,
      "label": "Show Divider"
    },
    {
      "type": "select",
      "id": "divider_width",
      "options": [
        { "value": "fixed", "label": "Fixed" },
        { "value": "full", "label": "Full" }
      ],
      "default": "fixed",
      "label": "Divider width"
    }
  ]
}
{% endschema %}
