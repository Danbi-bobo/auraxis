{{ 'component-testimonial.css' | asset_url | stylesheet_tag }}
{{ 'section-testimonials.css' | asset_url | stylesheet_tag }}
<script src="{{ 'testimonial.js' | asset_url }}" defer="defer"></script>

{% liquid
  assign columns_mobile_int = section.settings.columns_mobile | plus: 0
  assign enable_swipe_mobile = false
  if section.settings.swipe_on_mobile and section.blocks.size > columns_mobile_int
    assign enable_swipe_mobile = true
  endif

  assign columns_desktop = section.settings.columns_desktop
  assign columns_tablet = columns_desktop
  if columns_desktop > 3
    assign columns_tablet = columns_desktop | divided_by: 2.0 | ceil
  endif

  assign enable_slider = section.settings.enable_slider

  if section.blocks.size <= columns_desktop
    assign enable_slider = false
  endif

  assign has_richtext = false
  if section.settings.heading != blank or section.settings.description != blank or section.settings.subheading != blank
    assign has_richtext = true
  endif

  assign header_empty = true
  if has_richtext or enable_slider
    assign header_empty = false
  endif

  assign header_alignment = settings.section_header_alignment
  assign header_alignment_mobile = settings.section_header_alignment_mobile
  if header_alignment_mobile == 'inherit'
    assign header_alignment_mobile = header_alignment
  endif

  assign card_has_bg = false
  if section.settings.color_scheme != section.settings.card_color_scheme
    assign card_has_bg = true
  endif

  assign motion_delay = 50
%}

{%- style -%}
  /* --- AURAGEMS COMPACT TESTIMONIAL STYLE --- */
  .section-{{ section.id }} .testimonial-card {
    background: rgb(var(--color-background));
    border-radius: var(--block-radius);
    overflow: hidden;
    height: 100%;
    display: flex;
    flex-direction: column;
    transition: all 0.3s cubic-bezier(0.25, 0.8, 0.25, 1);
    border: 1px solid rgba(var(--color-foreground), 0.08);
    position: relative;
  }

  {% if card_has_bg %}
  .section-{{ section.id }} .testimonial-card {
    background: {{ section.settings.card_bg_color | default: 'rgba(var(--color-base-background-2))' }};
    border: none;
  }
  {% endif %}

  .section-{{ section.id }} .testimonial-card:hover {
    transform: translateY(-3px);
    box-shadow: 0 5px 15px rgba(0,0,0,0.05);
  }

  /* 1. ẢNH KHÁCH HÀNG (COMPACT) */
  .section-{{ section.id }} .testimonial-card__image-wrapper {
    width: 100%;
    position: relative;
    padding-bottom: {{ section.settings.image_ratio | default: '75%' }};
    background-color: rgba(0,0,0,0.03);
    overflow: hidden;
  }

  .section-{{ section.id }} .testimonial-card__image {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.5s ease;
  }
  
  .section-{{ section.id }} .testimonial-card:hover .testimonial-card__image {
    transform: scale(1.05);
  }

  /* CONTAINER NỘI DUNG (GIẢM PADDING) */
  .section-{{ section.id }} .testimonial-card__content {
    padding: 1.2rem; /* Giảm từ 2rem xuống 1.2rem để gọn hơn */
    display: flex;
    flex-direction: column;
    align-items: center;
    flex-grow: 1;
  }

  /* 2. ICON / SAO (NHỎ LẠI) */
  .section-{{ section.id }} .testimonial-card__icon {
    margin-bottom: 0.8rem;
    color: {{ section.settings.star_color | default: '#C5A059' }};
    display: flex;
    justify-content: center;
    gap: 2px;
  }
  
  .section-{{ section.id }} .testimonial-card__icon svg {
    width: 12px; /* Sao nhỏ lại */
    height: 12px;
  }

  /* 3. TEXT (NHỎ LẠI, CĂN ĐỀU) */
  .section-{{ section.id }} .testimonial-card__text {
    font-size: 1.2rem; /* Giảm cỡ chữ */
    line-height: 1.4;
    margin-bottom: 1rem;
    color: rgba(var(--color-foreground), 0.85);
    text-align: justify;
    width: 100%;
  }
  
  .section-{{ section.id }} .testimonial-card__text p {
    margin: 0;
    text-align-last: center;
  }

  /* 4. AUTHOR INFO (GỌN HƠN) */
  .section-{{ section.id }} .testimonial-card__info {
    margin-top: auto;
    text-align: center;
    border-top: 1px solid rgba(var(--color-foreground), 0.1);
    padding-top: 0.8rem;
    width: 100%;
  }

  .section-{{ section.id }} .testimonial-card__author {
    font-weight: 700;
    font-size: 1.1rem; /* Tên nhỏ lại */
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: rgb(var(--color-foreground));
    margin-bottom: 0.2rem;
  }

  .section-{{ section.id }} .testimonial-card__bio {
    font-size: 0.9rem; /* Bio nhỏ lại */
    opacity: 0.6;
    display: inline-flex;
    align-items: center;
    gap: 3px;
    justify-content: center;
  }
  
  .section-{{ section.id }} .verified-badge {
    color: #27ae60;
    width: 10px;
    height: 10px;
  }
{%- endstyle -%}

{% render 'divider',
  show_divider: section.settings.show_section_divider,
  divider_width: section.settings.divider_width
%}

<div
  class="section section-{{ section.id }} section--padding testimonials-wrapper{% if enable_slider %} testimonials-wrapper--slider{% endif %} color-{{ section.settings.color_scheme }}"
  style="--section-padding-top: {{ section.settings.padding_top }}px;--section-padding-bottom: {{ section.settings.padding_bottom }}px;"
>
  <div class="page-width">
    {%- unless header_empty -%}
      <div class="section__header spacing--large {% if enable_slider %} md:flex justify-between items-end gap-6{% endif %}">
        {% if has_richtext %}
          <div class="rich-text{% if enable_slider %} md:text-left{% else %} md:text-{{ header_alignment }}{% endif %} text-{{ header_alignment_mobile }}" style="max-width: 600px;">
            {% if section.settings.subheading != blank %}
              <motion-element
                class="block rich-text__subheading text-subheading"
                data-motion="fade-up"
                data-motion-delay="{{ motion_delay }}"
              >
                {{- section.settings.subheading -}}
              </motion-element>
              {%- assign motion_delay = motion_delay | plus: 50 -%}
            {% endif %}
            {% if section.settings.heading != blank %}
              <h2 class="rich-text__heading inline-richtext overflow-hidden {{ section.settings.heading_size }}">
                <motion-element data-motion="fade-up" data-motion-delay="{{ motion_delay }}" class="block">
                  {% render 'highlight-text',
                    text: section.settings.heading,
                    style: section.settings.heading_highlight_style
                  %}
                </motion-element>
              </h2>
              {%- assign motion_delay = motion_delay | plus: 50 -%}
            {% endif %}
            {% if section.settings.description != blank %}
              <motion-element
                data-motion="fade-up"
                data-motion-delay="{{ motion_delay }}"
                class="block rich-text__text rte {{ section.settings.text_size }}"
              >
                {{- section.settings.description -}}
              </motion-element>
              {%- assign motion_delay = motion_delay | plus: 50 -%}
            {% endif %}
          </div>
        {% endif %}

        {% if enable_slider %}
          <motion-element
            data-motion="fade-up"
            data-motion-delay="{{ motion_delay }}"
            class="swiper-controls hidden md:inline-flex"
          >
            <button
              type="button"
              class="swiper-btn-prev btn btn--icon-circle shrink-0"
              name="previous"
              aria-label="{{ 'general.slider.previous_slide' | t }}"
            >
              {%- render 'icon-slider-prev' -%}
            </button>
            <button
              type="button"
              class="swiper-btn-next btn btn--icon-circle shrink-0"
              name="next"
              aria-label="{{ 'general.slider.next_slide' | t }}"
            >
              {%- render 'icon-slider-next' -%}
            </button>
          </motion-element>
        {% endif %}
      </div>
    {%- endunless -%}
    
    <motion-element class="section__content block" data-motion="fade-up" data-motion-delay="{{ motion_delay }}">
      <testimonials-component
        class="testimonials block f-grid--gap-{{ section.settings.column_gap }}{% if enable_slider %} swiper{% endif %}{% if enable_swipe_mobile %} swipe-mobile swipe-mobile--{{ section.settings.columns_mobile }}-cols{% endif %}"
        data-section-id="{{ section.id }}"
        {% if enable_slider %}
          data-enable-slider="true"
          data-items="{{ columns_desktop }}"
          data-tablet-items="{{ columns_tablet }}"
          data-autoplay="{{ section.settings.auto_rotate }}"
          data-autoplay-speed="{{ section.settings.change_slides_speed }}"
        {% endif %}
      >
        <div class="testimonials__items f-grid f-grid-{{ columns_mobile_int }}-cols md:f-grid-{{ columns_tablet }}-cols lg:f-grid-{{ columns_desktop }}-cols {% if enable_slider %} swiper-wrapper{% endif %}{% if enable_swipe_mobile %} swipe-mobile__inner{% endif %}">
          {%- for block in section.blocks -%}
            <div
              class="f-column{% if enable_slider %} swiper-slide{% endif %}"
              {{ block.shopify_attributes }}
              data-index="{{ forloop.index0 }}"
            >
              <div class="testimonial-card">
                
                {%- if block.settings.show_image and block.settings.image != blank -%}
                  <div class="testimonial-card__image-wrapper">
                    <img 
                      src="{{ block.settings.image | image_url: width: 400 }}" 
                      alt="{{ block.settings.author | escape }}"
                      loading="lazy" 
                      width="400" 
                      height="{{ 400 | divided_by: block.settings.image.aspect_ratio | ceil }}"
                      class="testimonial-card__image"
                    >
                  </div>
                {%- else -%}
                   {%- if block.settings.show_image -%}
                     <div class="testimonial-card__image-wrapper">
                       {{ 'image' | placeholder_svg_tag: 'placeholder-svg testimonial-card__image' }}
                     </div>
                   {%- endif -%}
                {%- endif -%}

                <div class="testimonial-card__content">
                  <div class="testimonial-card__icon">
                    {%- if block.settings.icon == 'quote' -%}
                       <svg viewBox="0 0 24 24" fill="currentColor"><path d="M14.017 21L14.017 18C14.017 16.8954 14.9124 16 16.017 16H19.017C19.5693 16 20.017 15.5523 20.017 15V9C20.017 8.44772 19.5693 8 19.017 8H15.017C14.4647 8 14.017 8.44772 14.017 9V11C14.017 11.5523 13.5693 12 13.017 12H12.017V5H22.017V15C22.017 18.3137 19.3307 21 16.017 21H14.017ZM5.0166 21L5.0166 18C5.0166 16.8954 5.91203 16 7.0166 16H10.0166C10.5689 16 11.0166 15.5523 11.0166 15V9C11.0166 8.44772 10.5689 8 10.0166 8H6.0166C5.46432 8 5.0166 8.44772 5.0166 9V11C5.0166 11.5523 4.56889 12 4.0166 12H3.0166V5H13.0166V15C13.0166 18.3137 10.3303 21 7.0166 21H5.0166Z"/></svg>
                    {%- else -%}
                      {%- liquid
                        assign star_count = block.settings.icon | replace: '-stars', '' | replace: '-star', '' | plus: 0
                        if block.settings.icon == 'none' 
                          assign star_count = 5 
                        endif
                      -%}
                      {%- for i in (1..5) -%}
                        {%- if i <= star_count -%}
                          <svg viewBox="0 0 24 24" fill="currentColor"><path d="M12 17.27L18.18 21l-1.64-7.03L22 9.24l-7.19-.61L12 2 9.19 8.63 2 9.24l5.46 4.73L5.82 21z"/></svg>
                        {%- else -%}
                          <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" style="opacity: 0.3"><path d="M12 17.27L18.18 21l-1.64-7.03L22 9.24l-7.19-.61L12 2 9.19 8.63 2 9.24l5.46 4.73L5.82 21z"/></svg>
                        {%- endif -%}
                      {%- endfor -%}
                    {%- endif -%}
                  </div>

                  <div class="testimonial-card__text rte">
                    {{ block.settings.text }}
                  </div>

                  <div class="testimonial-card__info">
                    <p class="testimonial-card__author">{{ block.settings.author }}</p>
                    {%- if block.settings.bio != blank -%}
                      <div class="testimonial-card__bio">
                        {% render 'icon-check', class: 'verified-badge' %} 
                        <span>{{ block.settings.bio }}</span>
                      </div>
                    {%- endif -%}
                  </div>
                </div>

              </div>
            </div>
          {%- endfor -%}
        </div>
      </testimonials-component>
    </motion-element>
  </div>
</div>

{% schema %}
{
  "name": "Testimonials",
  "tag": "section",
  "class": "section section-testimonials",
  "disabled_on": {
    "groups": ["footer", "header", "custom.overlay"]
  },
  "settings": [
    {
      "type": "header",
      "content": "t:sections.all.general.name"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:sections.all.colors.label",
      "default": "scheme-1"
    },
    {
      "type": "header",
      "content": "t:sections.all.section_header.content"
    },
    {
      "type": "inline_richtext",
      "id": "heading",
      "default": "Happy Customers",
      "label": "t:sections.all.heading.label"
    },
    {
      "type": "select",
      "id": "heading_size",
      "label": "t:sections.all.text_size.heading.label",
      "default": "h2",
      "options": [
        { "value": "h3", "label": "Small" },
        { "value": "h2", "label": "Medium" },
        { "value": "h1", "label": "Large" }
      ]
    },
    {
      "type": "select",
      "id": "heading_highlight_style",
      "label": "t:sections.all.highlight_text.settings.highlight_style.label",
      "options": [
        { "value": "none", "label": "None" },
        { "value": "underline", "label": "Underline" }
      ]
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "t:sections.all.subheading.label"
    },
    {
      "type": "richtext",
      "id": "description",
      "label": "t:sections.all.text.label"
    },
    {
      "type": "select",
      "id": "text_size",
      "label": "t:sections.all.text_size.description.label",
      "default": "text-base",
      "options": [
        { "value": "text-base", "label": "Base" },
        { "value": "text-lg", "label": "Large" }
      ]
    },
    {
      "type": "header",
      "content": "Card Design"
    },
    {
      "type": "color_scheme",
      "id": "card_color_scheme",
      "label": "Card Color Scheme",
      "default": "scheme-1"
    },
    {
      "type": "color",
      "id": "star_color",
      "label": "Star/Icon Color",
      "default": "#C5A059"
    },
    {
      "type": "select",
      "id": "image_ratio",
      "label": "Image Aspect Ratio",
      "default": "100%",
      "options": [
        { "value": "100%", "label": "Square (1:1)" },
        { "value": "133.33%", "label": "Portrait (3:4)" },
        { "value": "66.66%", "label": "Landscape (3:2)" },
        { "value": "75%", "label": "Compact (4:3)" }
      ]
    },
    {
      "type": "header",
      "content": "t:sections.all.grid.name"
    },
    {
      "type": "range",
      "id": "columns_desktop",
      "min": 2,
      "max": 6,
      "step": 1,
      "default": 4,
      "label": "Columns on Desktop (Max 6)"
    },
    {
      "type": "select",
      "id": "column_gap",
      "options": [
        { "value": "small", "label": "Small" },
        { "value": "medium", "label": "Medium" },
        { "value": "large", "label": "Large" }
      ],
      "default": "medium",
      "label": "t:sections.all.grid.column_gap.label"
    },
    {
      "type": "header",
      "content": "Slider Settings"
    },
    {
      "type": "checkbox",
      "id": "enable_slider",
      "label": "t:sections.all.carousel.enable_carousel",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "auto_rotate",
      "label": "Auto-rotate slides",
      "default": true
    },
    {
      "type": "range",
      "id": "change_slides_speed",
      "min": 3,
      "max": 10,
      "step": 1,
      "unit": "s",
      "label": "Change slides every",
      "default": 5
    },
    {
      "type": "header",
      "content": "Mobile Settings"
    },
    {
      "type": "select",
      "id": "columns_mobile",
      "options": [
        { "value": "1", "label": "1 Column" },
        { "value": "2", "label": "2 Columns" }
      ],
      "default": "2",
      "label": "t:sections.all.mobile.columns_mobile.label"
    },
    {
      "type": "checkbox",
      "id": "swipe_on_mobile",
      "default": true,
      "label": "t:sections.all.mobile.swipe_on_mobile.label"
    },
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 2,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 50
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 2,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 50
    },
    {
      "type": "checkbox",
      "id": "show_section_divider",
      "default": false,
      "label": "t:sections.all.divider.settings.show_divider.label"
    },
    {
      "type": "select",
      "id": "divider_width",
      "options": [
        { "value": "fixed", "label": "Fixed" },
        { "value": "full", "label": "Full" }
      ],
      "default": "fixed",
      "label": "Divider Width"
    }
  ],
  "blocks": [
    {
      "type": "testimonial",
      "name": "t:sections.testimonials.blocks.testimonial.name",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Review Image (Product/Customer)"
        },
        {
          "type": "checkbox",
          "id": "show_image",
          "label": "Show Image",
          "default": true
        },
        {
          "type": "select",
          "id": "icon",
          "label": "Rating",
          "options": [
            { "value": "5-stars", "label": "5 Stars" },
            { "value": "4-stars", "label": "4 Stars" },
            { "value": "3-stars", "label": "3 Stars" },
            { "value": "quote", "label": "Quote Icon" },
            { "value": "none", "label": "None" }
          ],
          "default": "5-stars"
        },
        {
          "type": "richtext",
          "id": "text",
          "default": "<p>\"Chất lượng sản phẩm tuyệt vời, đóng gói cẩn thận. Tôi rất hài lòng!\"</p>",
