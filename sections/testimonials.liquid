        },
        {
          "type": "text",
          "id": "author",
          "default": "Nguyễn Văn A",
          "label": "Customer Name"
        },
        {
          "type": "text",
          "id": "bio",
          "label": "Badge (e.g. Verified Buyer)",
          "default": "Verified Buyer"
        }
