{% comment %}
  Renders a specific icon based on the 'icon' parameter.
  Usage: {% render 'icon-accordion', icon: 'truck' %}
{% endcomment %}

{%- case icon -%}
  {%- when 'truck' -%}
    <svg xmlns="http://www.w3.org/2000/svg" aria-hidden="true" focusable="false" class="icon icon-truck" fill="none" viewBox="0 0 24 24" stroke="currentColor" width="20" height="20">
      <path d="M5 8h14M5 8a2 2 0 110-4h14a2 2 0 110 4M5 8v10a2 2 0 002 2h10a2 2 0 002-2V8m-9 4h4" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
    </svg>
  {%- when 'ruler' -%}
    <svg xmlns="http://www.w3.org/2000/svg" aria-hidden="true" focusable="false" class="icon icon-ruler" fill="none" viewBox="0 0 24 24" stroke="currentColor" width="20" height="20">
      <path d="M19 4h-1V2h-2v2h-4V2h-2v2H6a2 2 0 00-2 2v12a2 2 0 002 2h13a2 2 0 002-2V6a2 2 0 00-2-2z" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
    </svg>
  {%- when 'check-circle' -%}
    <svg xmlns="http://www.w3.org/2000/svg" aria-hidden="true" focusable="false" class="icon icon-check-circle" fill="none" viewBox="0 0 24 24" stroke="currentColor" width="20" height="20">
      <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
    </svg>
  {%- else -%}
    <svg xmlns="http://www.w3.org/2000/svg" aria-hidden="true" focusable="false" class="icon icon-box" fill="none" viewBox="0 0 24 24" stroke="currentColor" width="20" height="20">
      <path d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
    </svg>
{%- endcase -%}